<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46ac8a">
    <TextView
        android:textStyle="bold"
        android:id="@+id/title"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="#ae1a09"
        android:textSize="30dp"
        android:text="Edit Your Task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textStyle="bold"
        android:textColor="#2e2d2d"
        android:hint="typing your task here"
        android:id="@+id/editAddEdit"
        android:padding="16dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="COFIRM"
        android:id="@+id/btnAddEdit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editAddEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="cancel"
        android:id="@+id/btncancelEdit"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editAddEdit"
        android:layout_toRightOf="@+id/btnAddEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>